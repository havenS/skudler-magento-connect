<?xml version="1.0"?>
<config>
  <modules>
    <Skudler_SConnect>
      <version>0.1.0</version>
    </Skudler_SConnect>
  </modules>
  <global>
    <helpers>
      <sconnect>
        <class>Skudler_SConnect_Helper</class>
      </sconnect>
    </helpers>
	<blocks>
	  <sconnect>
		<class>Skudler_SConnect_Block</class>
	  </sconnect>
	</blocks>
  </global>
  <admin>
	<routers>
	  <sconnect>
	    <use>admin</use>
		<args>
		  <module>Skudler_SConnect</module>
		  <frontName>admin_sconnect</frontName>
		</args>
	  </sconnect>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <sconnect module="sconnect">
		<title>SConnect</title>
		<sort_order>100</sort_order>
		<children>
		  <sconnectbackend module="sconnect">
			<title>Backend Page Title</title>
			<sort_order>0</sort_order>
			<action>admin_sconnect/adminhtml_sconnectbackend</action>
		  </sconnectbackend>
		</children>
	  </sconnect>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<sconnect translate="title" module="sconnect">
			  <title>SConnect</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <sconnectbackend translate="title">
			<title>Backend Page Title</title>
		  </sconnectbackend>
			  </children>
			</sconnect>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<sconnect>
		  <file>sconnect.xml</file>
		</sconnect>
	  </updates>
	</layout>
  </adminhtml>
</config> 